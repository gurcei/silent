'----------
.state_loop
'----------
  tstart = ti

  if logo_state = ST_FADE_TO_WHITE then begin
    gosub fade_to_white
    logo_state = ST_DRAW_BACKDROP_ONLY

  bend
  
  if logo_state = ST_DRAW_BACKDROP_ONLY then begin
    bank 128
    poke $d020, 1, 1
    gosub init_80x50
    gosub draw_backdrop
    gosub page_flip
    gosub store_curr_colours
    gosub set_palette_for_backdrop
    fadeval=0
    m=0
    logo_state = ST_FADE_TO_DEFAULT
  bend
  
  if logo_state = ST_FADE_TO_DEFAULT then begin
    if fadeval <= 128 then begin
      ' fade_colours_to_defaults
      bank 0:vsync 10:sys $7e03, fadeval:bank 128
      fadeval = fadeval + 1
    bend

    ' cycle_alt_palette
    bank 0:sys $7e06:bank 128
    m = m + 1

    if m = 130 then logo_state = ST_DROP_IN_B
  bend

  if logo_state = ST_DROP_IN_B then begin
    gosub animate_logo
    ' cycle_alt_palette
    bank 0:sys $7e06:bank 128
    m = m + 1

    if m > 250 then logo_state = ST_PRESENTS:fadeval = 0
  bend

  if logo_state = ST_PRESENTS then begin
    gosub anim_draw_subtext
    ' cycle_alt_palette
    bank 0:sys $7e06:bank 128
    m = m + 1

    if m > 360 then begin
      ' fade to black
      bank 0:sys $7e0c, fadeval:bank 128
      fadeval = fadeval + 1
    bend

    if fadeval = 128 then begin
      poke $d020, 0, 0
      print "{x93}";
      gosub store_curr_colours
      gosub restore_default_palette
      logo_state = ST_FADE_TO_STARS
      fadeval = 0
    bend
  bend

  if logo_state = ST_FADE_TO_STARS then begin
      if fadeval <= 128 then begin
        ' fade_colours_to_defaults
        bank 0:vsync 10:sys $7e03, fadeval:bank 128
        fadeval = fadeval + 1
      bend
      gosub draw_starfield
      gosub page_flip
      gosub iter_starfield

      if fadeval = 129 then logo_state = ST_DRAW_ANATHEMA : m = 0
  bend

  if logo_state = ST_DRAW_ANATHEMA then begin
    ' gosub iter_maindemo
    m = m + 1
    gosub draw_starfield

    ' draw anathema logo
    fidx%=0
    gosub play_data_iter  ' line data

    gosub page_flip
    gosub iter_starfield

    if m = 720 then begin
      logo_state = ST_DRAW_SONG_TITLE
      m = 0
      offs(1) = -25
    bend
  bend

  if logo_state = ST_DRAW_SONG_TITLE then begin
    m = m + 1
    gosub draw_starfield

    ' scroll off anathema
    if m > 150 and m < 230 then fidx%=0:gosub scroll_canvas_right

    ' draw song title
    if m > 10 and m < 1900 then begin
      fidx%=1
      gosub play_data_iter
      gosub play_data_iter
      if mod(m, 4) = 0 then gosub scroll_canvas_right
      ' if m > 1910 then gosub scroll_canvas_right
    bend

    if plyptr >= 9 then gosub draw_qix_lines

    gosub page_flip
    gosub iter_starfield
  bend

  do
    ret% = 0
    do while ret% = 0
      gosub parse_current_seqptr
    loop
  loop while (ti-tstart) < .03

  goto state_loop

  return


