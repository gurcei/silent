' SILENT2.EL IS JUST AN EXTENSION OF SILENT.EL' TO WORK AROUND THE MAX 2000 SOURCE LINE LIMITATIONS OF ELEVEN.INITØROTATE'-----------  ^^BLOAD "ASMROTATE",B0  GREETØX = 1  ANG = 2*–… + .1  GOSUB LOADØGREETS  PLØRAD = 0  PLØANG = 0  PLØDIR = 0  PLØCLR = 0  ' CLEAR 80X50 CHARS AND COLOUR RAM  EDMA 3, 4000, 160, $40800  EDMA 3, 4000, 6, $FF80000  ' CLEAR 96X96 ARRAY  EDMA œ–Ø∆…ÃÃ, 96*96, 0, $44000  RETURN.ITERØGREETØTXT'--------------  RET = 0  IF GREETØLINE > GREETØCNT THEN RETURN  IF GREETØX > LEN(GREETS$(GREETØLINE)) THEN BEGIN    LINEØX = 0    GREETØX = 1    GREETØLINE = GREETØLINE + 1    ' SCROLL UP    EDMA 0, $F50, $52050, $52000    EDMA 0, $F50, $53050, $53000    EDMA 3, 80, 32, $52F50    EDMA 3, 80, 0, $53F50    RET = 1  BEND  IF RET=1 THEN GOTO ITERØGREETØTXT  CHR = ASC(MID$(GREETS$(GREETØLINE), GREETØX, 1))  GOSUB PETSCIIØTOØSCREENCODE  IF CHR = 27 THEN RBWØFLAG=1:GREETØX=GREETØX+1 : GOTO ITERØGREETØTXT  ' [ CHAR  IF CHR = 29 THEN RBWØFLAG=0:GREETØX=GREETØX+1 : GOTO ITERØGREETØTXT  ' ] CHAR  IF RBWØFLAG THEN RBWØCLR = MOD(RBWØCLR+1, 16):MYCLR = RBWØCLR:ELSE MYCLR = 1  IF CHR<>32 THEN BEGIN    POKE $52F50 + LINEØX, CHR    POKE $53F50 + LINEØX, MYCLR + RBWØFLAG * 64  BEND  GREETØX = GREETØX + 1  LINEØX = LINEØX + 1  RETURN.LOADØGREETS'-----------  DOPEN #2,"GREETS.T",R,U8  GREETØCNT = 0  DO    LINE INPUT #2, GREETS$(GREETØCNT)    IF ST THEN EXIT    GREETØCNT = GREETØCNT + 1  LOOP  DCLOSE #2  RETURN.ROTATEØLOGIC'------------  ANG = ANG - .1  IF ANG < 0 THEN ANG = ANG + (2 * –…)  HYP = SQR(25*25+40*40) * 65536  XINC = COS(ANG) * 65536  YINC = SIN(ANG) * 65536  TXINC = COS(ANG+–…/2) * 65536  TYINC = SIN(ANG+–…/2) * 65536  BOXØANG = ATN(-25/-40)+ –… +ANG  IF BOXØANG < 0 THEN BOXØANG = BOXØANG + (2 * –…)  TX = HYP * COS(BOXØANG) + 48 * 65536  TY = HYP * SIN(BOXØANG) + 48 * 65536  CX = TX  CY = TY  XFRAC = 0  YFRAC = 0  RETURN.DRAWØCONTENT'------------  GOSUB PLOTØITERATION  GOSUB ASMØROTATION  ' GOSUB BASICØROTATION  'CURSOR 0,0:PRINT CHR$(27);"Q TX=";TX;", TY=";TY;  'CURSOR 0,1:PRINT CHR$(27);"Q ANG=";ANG;", HYP=";HYP;  'CURSOR 0,2:PRINT CHR$(27);"Q XINC=";XINC;", YINC=";YINC;  'CURSOR 0,3:PRINT CHR$(27);"Q TXINC=";TXINC;", TYINC=";TYINC;  'GET KEY A$  RETURN.PLOTØITERATION'--------------  FOR PLTØITER = 0 TO 6    X = 48 + COS(PLØANG) * PLØRAD    Y = 48 + SIN(PLØANG) * PLØRAD    POKE $44000 + X + INT(Y) * 96, PLØCLR + 64    PLØANG = PLØANG + .025    IF PLØANG > 2 * –… THEN PLØANG = PLØANG - 2 * –…    PLØRAD = PLØRAD + .05    IF PLØRAD > 30 THEN BEGIN      PLØRAD=0      PLØCLR = PLØCLR + 1      PLØANG = .3926 * PLØCLR    BEND  NEXT PLTØITER  RETURN.ASMØROTATION'------------  ' ¡””≈Õ¬ÃŸ VERSION  IF XINC < 0 THEN XINC = XINC + 4294967296  IF YINC < 0 THEN YINC = YINC + 4294967296  IF TXINC < 0 THEN TXINC = TXINC + 4294967296  IF TYINC < 0 THEN TYINC = TYINC + 4294967296  WPOKE $1A00, MOD(TX,65536)  WPOKE $1A02, TX/65536  WPOKE $1A04, MOD(TY, 65536)  WPOKE $1A06, TY/65536  WPOKE $1A08, MOD(XINC,65536)  WPOKE $1A0A, XINC/65536  WPOKE $1A0C, MOD(YINC, 65536)  WPOKE $1A0E, YINC/65536  WPOKE $1A10, MOD(TXINC, 65536)  WPOKE $1A12, TXINC/65536  WPOKE $1A14, MOD(TYINC, 65536)  WPOKE $1A16, TYINC/65536  BANK 0:SYS $1800:BANK 128  RETURN