  ' ¬¡”…√ VERSION  FOR Y = 0 TO 49    CX = TX    CY = TY    FOR X = 0 TO 79      POKE $FF80000 + X + Y1ADD, PEEK($44000 + CX/65536 + INT(CY/65536) * 96)      CX = CX + XINC      CY = CY + YINC    NEXT X    TX = TX + TXINC    TY = TY + TYINC    Y1ADD = Y1ADD + 80  NEXT Y  GET KEY A$  RETURN